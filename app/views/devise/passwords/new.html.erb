<main class="forgot-password">
  <%= render partial: "guest_header" %>
  <h1><%= I18n.t('auth.forgot_password') %></h1>

  <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <p class="field">
      <%= f.label :email, I18n.t('email'), class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <span class="error text-danger"></span>
    </p>

    <%= f.submit I18n.t('auth.send_me_reset_password_instructions'), class: "btn btn-primary", id: "send" %>

    <div class="or"><%= I18n.t('auth.or') %></div>

    <p><%= link_to I18n.t('auth.create_new_account'), new_user_registration_path %></p>
    <p><%= link_to I18n.t('auth.back_to_login'), new_user_session_path %><br /></p>

  <% end %>
</main>

<%= javascript_include_tag "forgot_password", type: "module" %>
<%#= render "devise/shared/links" %>
