<main class="login">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p class="field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <span class="error text-danger"></span>
    </p>

    <p class="field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <span class="error text-danger"></span>
    </p>

    <% if devise_mapping.rememberable? %>
      <p class="field">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </p>
    <% end %>

    <%= f.submit "Log in", id: "login", class: "btn btn-primary" %>

    <div class="or">OR</div>

    <div class="third-party">
        <p>Log in with</p>
        <div class="row row-cols-3">
            <a href="#"> <%= image_tag 'google.png', size: "50", alt: "Google"%> </a>
            <a href="#"> <%= image_tag 'facebook.png', size: "50", alt: "Facebook"%> </a>
            <a href="#"> <%= image_tag 'twitter.png', size: "50", alt: "X"%> </a>
        </div>
    </div>

    <p><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>

    <hr>

    <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
  <% end %>
</main>

<%= javascript_include_tag "login", type: "module" %>
<%#= render "devise/shared/links" %>