<main class="edit-profile">
    <%= form_with url: user_path(@user.id), model: @user, local: true, id: "pwd-form" do |form| %>
        <h2>Change Password</h2>
        <p class="field">
            <%= form.label :password, "Current Password", class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
            <span class="error text-danger"></span>
        </p>
        <p class="field">
            <%= form.label :new_password, "New Password", class: "form-label" %>
            <%= form.password_field :new_password, class: "form-control" %>
            <span class="error text-danger"></span>
        </p>
        <p class="field">
            <%= form.label :confirm_password, "Confirm Password", class: "form-label" %>
            <%= form.password_field :confirm_password, class: "form-control" %>
            <span class="error text-danger"></span>
        </p>
        <%= form.submit "Save Password", id: "save-pwd", class: "btn btn-primary" %>
    <% end %>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="pwdToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src="..." class="rounded me-2" alt="...">
                <strong class="me-auto">Bootstrap</strong>
                <small>11 mins ago</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                Password saved!
            </div>
        </div>
    </div>
</main>

<%= javascript_include_tag "change_password", type: "module" %>