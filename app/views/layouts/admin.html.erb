<% content_for :header do %>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid">
                <a class="navbar-brand logo" href="#">Fotoverse Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <% if current_page?(admin_photos_path) %>
                                <a class="nav-link active" aria-current="page" href="#">Photos</a>
                            <% else %>
                                <%= link_to "Photos", admin_photos_path, class: "nav-link", data: {turbo: false} %>
                            <% end %>
                        </li>
                        <li class="nav-item">
                            <% if current_page?(admin_albums_path) %>
                                <a class="nav-link active" aria-current="page" href="#">Albums</a>
                            <% else %>
                                <%= link_to "Albums", admin_albums_path, class: "nav-link", data: {turbo: false} %>
                            <% end %>
                        </li>
                        <li class="nav-item">
                            <% if current_page?(admin_users_path) %>
                                <a class="nav-link active" aria-current="page" href="#">Users</a>
                            <% else %>
                                <%= link_to "Users", admin_users_path, class: "nav-link", data: {turbo: false} %>
                            <% end %>
                        </li>
                        <li class="nav-item">
                            <%= link_to "Logout", logout_path, data: {turbo_method: :delete}, id: "nav-logout", class: "nav-link" %>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
<% end %>
<%= render template: "layouts/application" %>